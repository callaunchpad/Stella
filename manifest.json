{
  "manifest_version": 2,
  "name": "Stella Voice Control",
  "description": "A Launchpad app that allows users to browse the web through voice control",
  "version": "1.0",
  "icons": {
    "16": "public/img/favicon-16x16.png",
    "48": "public/img/icon-48x48.png",
    "128": "public/img/icon-128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "public/img/favicon-16x16.png",
      "48": "public/img/icon-48x48.png",
      "128": "public/img/icon-128x128.png"
    }
  },
  "permissions": [
    "activeTab",
    "background",
    "notifications",
    "tabs",
    "tts",
    "history",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background/background.js", "background/tts.js", "background/notifications.js"]
  }
}
